<aura:component implements="lightning:isUrlAddressable" controller="CartDetailsAuraServices">
    <aura:attribute name="cartItemList" type="Object" />
    <aura:attribute name="subTotal" type="Integer" />
    <aura:attribute name="discountAmount" type="Integer" />
    <aura:attribute name="errorDiscount" type="String" />
    <aura:attribute name="isCouponAplied" type="Boolean" />
    <aura:attribute name="isCouponSuccess" type="Boolean" />
    <aura:attribute name="isCheckout" type="Boolean" />
    <aura:attribute name="isNewAddress" type="Boolean" />
    <aura:attribute name="CartId" type="String" />
    <lightning:navigation aura:id="navigation" />


    <aura:handler name="change" value="{!v.isCheckout}" action="{!c.getAddress}" />

    <aura:attribute name="addressBook" type="Address_Book__c" default="{
                                                                      sobjectType:'Address_Book__c',
                                                                      Street__c : '',
                                                                      City__c:'',
                                                                      Postal_Code__c:'',
                                                                      State__c : '',
                                                                      Country__c : ''
                                                                      }" />
    <aura:attribute name="record" type="Object" />
    <aura:attribute name="recordError" type="String" />

    <aura:attribute name="selectedAddress" type="Object" />

    <!-- LDS for Create Record -->
    <force:recordData aura:id="recordCreator" layoutType="FULL" mode="EDIT" targetRecord="{!v.record}"
        targetFields="{!v.addressBook}" targetError="{!v.recordError}" />

    <aura:attribute name="addressList" type="Object" />
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <div class="c-container">
        <lightning:layout multipleRows="true">
            <lightning:layoutItem padding="around-small" size="12">
                <div class="page-header">
                    <img src="{!$Resource.Beer_Explorer}" style="margin-top: -22px;height: 100px;" />
                </div>
            </lightning:layoutItem>
            <lightning:layoutItem padding="around-small" size="12">
                <lightning:layout>
                    <aura:if isTrue="{!!v.isCheckout}">
                        <lightning:layoutItem padding="around-small" size="9">
                            <div class="page-section page-main">
                                <h2 class="slds-text-title_caps" style="height: 55px;
                                                                            background: rgb(212, 165, 212);
                                                                            line-height: 3;
                                                                            padding-left: 10px;
                                                                            font-size: 19px;
                                                                            font-weight: bold;">
                                    SHOPPING CART({!v.cartItemList.length} &nbsp; items)
                                </h2>

                                <aura:if isTrue="{!v.cartItemList.length > 0}">
                                    <div class="slds-grid slds-wrap">
                                        <div class="slds-col slds-size_1-of-4"></div>
                                        <div class="slds-col slds-size_1-of-4"><b>Price</b></div>
                                        <div class="slds-col slds-size_1-of-4"><b>Quantity</b></div>
                                        <div class="slds-col slds-size_1-of-4"></div>
                                    </div>
                                    <aura:iteration items="{!v.cartItemList}" var="item" indexVar="index">
                                        <c:CartItem cartItem="{!item}" index="{!index}" />
                                    </aura:iteration>
                                    <lightning:buttonGroup>
                                        <lightning:button label="Continue Shopping" onclick="{!c.homePage}" />
                                        <lightning:button label="Proceed Checkout" variant="brand"
                                            onclick="{!c.doCheckout}" />
                                    </lightning:buttonGroup>
                                    <aura:set attribute="else">
                                        <img src="{!$Resource.empty_cart}" class="slds-align_absolute-center" /><br />
                                        <a href="JavaScript:void(0);" class="slds-align_absolute-center"
                                            onclick='{!c.homePage}'>
                                            Click Here to add Items
                                        </a>
                                    </aura:set>
                                </aura:if>
                            </div>
                        </lightning:layoutItem>
                    </aura:if>
                    <aura:if isTrue="{!v.isCheckout}">
                        <lightning:layoutItem padding="around-small" size="9">
                            <div class="page-section page-main">
                                <h1>Select Billing/Shipping Address</h1>
                                <aura:if isTrue="{!and(v.addressList.length > 0, !v.isNewAddress)}">
                                    <div class="slds-grid slds-wrap">
                                        <aura:iteration items="{!v.addressList}" var="item" indexVar="index">
                                            <div class="slds-col slds-size_1-of-2">
                                                <ui:inputRadio aura:id="r0" name="others" label=""
                                                    change="{!c.onSelect}" text="{!index}" />
                                                <lightning:formattedAddress street="{!item.Street__c}"
                                                    city="{!item.City__c}" country="{!item.Country__c}"
                                                    province="{!item.State__c}" postalCode="{!item.Postal_Code__c}"
                                                    disabled="true" />
                                            </div>
                                        </aura:iteration>
                                    </div>
                                    <lightning:button name="Place Order" label="Place Order" variant="brand"
                                        onclick="{!c.placeOrder}" />
                                    <lightning:button name="Add New Address" label="Add New Address" variant="brand"
                                        onclick="{!c.addNewAddress}" />
                                    <aura:set attribute="else">
                                        <lightning:input aura:id="address" name="Street" label="Street" required="true"
                                            value="{!v.addressBook.Street__c}" placeholder="type here..." />
                                        <lightning:input aura:id="address" name="City" label="City" required="true"
                                            value="{!v.addressBook.City__c}" placeholder="type here..." />
                                        <lightning:input aura:id="address" name="PostalCode" label="PostalCode"
                                            required="true" value="{!v.addressBook.Postal_Code__c}"
                                            placeholder="type here..." />
                                        <lightning:input aura:id="address" name="State" label="State" required="true"
                                            value="{!v.addressBook.State__c}" placeholder="type here..." />
                                        <lightning:input aura:id="address" name="Country" label="Country"
                                            required="true" value="{!v.addressBook.Country__c}"
                                            placeholder="type here..." />
                                        <lightning:button variant="brand" label="save address"
                                            onclick="{!c.doSaveAddress}" />
                                    </aura:set>
                                </aura:if>
                            </div>
                        </lightning:layoutItem>
                    </aura:if>
                    <lightning:layoutItem padding="around-small" size="3">
                        <aura:if isTrue="{!v.cartItemList.length > 0}">
                            <div class="page-section page-right">
                                <b>Subtotal ({!v.cartItemList.length} item):</b> &nbsp;
                                <lightning:formattedNumber label="Price" value="{!v.subTotal}" 
                                    currencyCode="USD" />
                                <br />
                                <aura:if isTrue="{!!v.isCouponSuccess}">
                                    Have a Coupon?
                                    <a href="JavaScript:void(0);" onclick="{!c.applyCoupon}">
                                        Apply Here
                                    </a>
                                </aura:if>
                                <aura:if isTrue="{!v.isCouponAplied}">
                                    <aura:if isTrue="{!!v.isCouponSuccess}">
                                        <p>
                                            <lightning:input name="input3" aura:id="CouponNo"
                                                label="15 Digit Valid Coupon No" placeholder="type here..." />
                                            <lightning:button label="Apply" variant="brand"
                                                onclick="{!c.doApplyCoupon}" />
                                        </p>
                                    </aura:if>
                                    <aura:if isTrue="{!v.errorDiscount != null}">
                                        <p style="color:red">
                                            {!v.errorDiscount}
                                        </p>
                                    </aura:if>
                                    <aura:if isTrue="{!v.discountAmount != null}">
                                        <p style="color:green;">
                                            Discount of <b>${!v.discountAmount}</b> has been applied to
                                            the total of your Cart.
                                        </p>
                                    </aura:if>
                                </aura:if>
                                <br />
                                <br />
                                <aura:if isTrue="{!!v.isCheckout}">
                                    <lightning:buttonGroup>
                                        <lightning:button label="Continue" onclick="{!c.homePage}" />
                                        <lightning:button label="Proceed Checkout" variant="brand"
                                            onclick="{!c.doCheckout}" />
                                    </lightning:buttonGroup>
                                </aura:if>
                            </div>
                        </aura:if>
                        <div class="page-section page-right">
                            <h2>Frequently Purchased..</h2>
                            <p>

                            </p>
                        </div>
                    </lightning:layoutItem>
                </lightning:layout>
            </lightning:layoutItem>
            <lightning:layoutItem flexibility="auto" padding="around-small" size="12">
                <div class="page-footer page-section">
                    <h2>Beer Explorer</h2>
                </div>
            </lightning:layoutItem>
        </lightning:layout>
    </div>
</aura:component>